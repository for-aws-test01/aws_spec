{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "warn",
    "no-unused-vars": "error",
    "prefer-const": "error",
    "no-var": "error",
    "max-len": ["error", { "code": 120 }],
    "eqeqeq": ["error", "always"],
    "curly": ["error", "all"],
    "no-param-reassign": ["error", { "props": false }],
    "import/prefer-default-export": "off"
  }
}
